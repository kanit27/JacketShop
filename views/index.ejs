      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <style>
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        padding: 0;
        font-family: "Poppins", sans-serif;
        overflow-x: hidden;
      }
      ::-webkit-scrollbar {
        display: none;
      }
      .swiper {
        width: 100vh;
        height: auto;
      }
      .slider {
        position: relative;
        width: 100%;
        height: 20vh;
        overflow: hidden;
        white-space: nowrap;
        cursor: pointer;
      }

      /* Scrolling Text */
      .slider-track {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 100px; /* Space between text */
        animation: scroll 10s linear infinite;
      }

      /* Individual text block */
      .slider-track span {
        font-size: 8rem;
        font-weight: bold;

        text-transform: uppercase;
        font-family: "Anton SC";
        color: black;
      }

      /* Animation */
      @keyframes scroll {
        from {
          transform: translateX(-150%);
        }
        to {
          transform: translateX(0);
        }
      }
    </style>
  </head>
  <body>
    <div class="w-screen h-screen">
      <nav
        class="w-full flex justify-between items-center p-4 bg-gray-100 fixed top-0 left-0 z-50"
      >
        <div class="flex gap-2 items-center">
          <a class="tracking-tighter text-xl" href="/shop">Shop </a>
        </div>
        <div class="flex items-center">
          <a class="text-3xl font-bold" href="/" style="font-family: Michroma"
