            <i class="ri-user-line text-2xl"></i>
            <div
              class="absolute right-0 mt-2 w-48 bg-white border rounded shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-50"
            >
              <% if (user) { %>
              <div class="px-4 py-2 border-b">
                <p class="font-bold"><%= user.name %></p>
                <p class="text-sm text-gray-500"><%= user.email %></p>
              </div>
              <form action="/users/logout" method="POST" class="px-4 py-2">
                <button
                  type="submit"
                  class="w-full text-left text-red-600 hover:underline"
                >
