<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Products - JacketAdmin</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Urbanist&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet" />
  <style>
    * { box-sizing: border-box; }
    body { margin: 0; padding: 0; font-family: "Poppins"; overflow-x: hidden; }
    ::-webkit-scrollbar { display: none; }
  </style>
</head>
<body>
  <div class="flex h-screen bg-gray-100">
    <div class="w-76 bg-white h-screen shadow-lg p-6">
      <h1 class="text-2xl font-bold text-gray-800">JacketDashboard</h1>
      <nav class="mt-6">
        <a href="/owners/products-page" class="block px-6 py-3 text-gray-600 hover:bg-gray-100">Products</a>
        <a href="/owners/orders-page" class="block px-6 py-3 text-gray-600 hover:bg-gray-100">Orders</a>
      </nav>
    </div>
    <main class="flex-1 overflow-y-auto p-6">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Products</h1>
        <a class="flex flex-row gap-2 shadow bg-white h-fit px-8 py-3 rounded-xl text-black" href="/owners/products-page/product">
          <i class="ri-add-line font-semibold"></i>
          <span class="font-semibold">Add Product</span>
        </a>
      </div>
      <div class="bg-white rounded-lg shadow p-6">
        <table class="w-full">
          <thead>
            <tr class="text-left text-gray-500">
              <th class="pb-4">Image</th>
              <th class="pb-4">Name</th>
              <th class="pb-4">Category</th>
              <th class="pb-4">Material</th>
              <th class="pb-4">Sizes</th>
              <th class="pb-4">Colors</th>
              <th class="pb-4">Price</th>
              <th class="pb-4">Discount</th>
              <th class="pb-4">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (products && products.length > 0) { %>
              <% products.forEach(function(product, idx) { %>
                <tr class="border-t">
                  <td class="py-4">
                    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="" class="w-20 h-20 object-cover rounded" />
                  </td>
                  <td class="py-4 font-semibold"><%= product.name %></td>
                  <td class="py-4"><%= product.category %></td>
                  <td class="py-4"><%= product.material %></td>
                  <td class="py-4">
                    <% product.size.forEach(function(size, i) { %>
                      <span class="inline-block border px-2 py-1 text-xs rounded mr-1"><%= size %></span>
                    <% }) %>
                  </td>
                  <td class="py-4">
                    <% product.color.forEach(function(color, i) { %>
                      <span class="inline-block w-4 h-4 rounded-full mr-1" style="background-color:<%= color %>"></span>
                    <% }) %>
                  </td>
                  <td class="py-4">$<%= product.price %></td>
                  <td class="py-4">
                    <% if (product.discount && product.discount > 0) { %>
                      <span class="px-2 py-1 text-xs rounded bg-red-100 text-red-800">-<%= product.discount %>%</span>
                    <% } else { %>
                      <span class="text-gray-400">â€”</span>
                    <% } %>
                  </td>
                  <td class="py-4">
                    <a class="text-indigo-600 hover:text-indigo-800 mr-2" href="/owners/products-page/edit/<%= product._id %>">
                      <i class="ri-edit-line"></i> Edit
                    </a>
                    <form action="/owners/products-page/delete/<%= product._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                      <button type="submit" class="text-red-600 hover:text-red-800">
                        <i class="ri-delete-bin-line"></i> Delete
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="9" class="py-8 text-center text-gray-400">No products found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>
